<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+android:id/background"
        android:drawable="@drawable/night_progress_bar_background"/>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <padding
                    android:bottom="0dip"
                    android:left="0dip"
                    android:right="3dip"
                    android:top="3dip" />

                <corners android:radius="3dp" />

                <gradient
                    android:angle="0"
                    android:endColor="#4F1F78AD"
                    android:startColor="#4F1F78AD" />
            </shape>
        </clip>
    </item>

</layer-list>