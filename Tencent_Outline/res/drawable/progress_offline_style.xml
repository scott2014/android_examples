<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@+android:id/background">
        <shape>
            <padding
                android:bottom="0dip"
                android:left="0dip"
                android:right="3dip"
                android:top="3dip" />

            <corners android:radius="10dp" />

            <gradient
                android:angle="0"
                android:endColor="#cfd0d2"
                android:startColor="#cfd0d2" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <padding
                    android:bottom="0dip"
                    android:left="0dip"
                    android:right="3dip"
                    android:top="3dip" />

                <corners android:radius="10dp" />

                <gradient
                    android:angle="0"
                    android:endColor="#04A0FD"
                    android:startColor="#29a1f6" />
            </shape>
        </clip>
    </item>

</layer-list>