    <style name="menushow">
        <item name="android:windowEnterAnimation">@anim/menu_in</item>
        <item name="android:windowExitAnimation">@anim/menu_out</item>
    </style>

    <style name="PopupAnimation_Above" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter_above</item>
        <item name="android:windowExitAnimation">@anim/popup_exit_above</item>
    </style>

    <style name="NoShade" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>               
        <item name="switchStyle">@style/switch_style</item>
    </style>
    <style name="NoShade2" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>               
        <item name="switchStyle">@style/night_switch_style</item>
    </style>

    <!-- 下拉listView -->
    <style name="ListView" parent="android:style/Widget.ListView">
        <item name="android:background">@color/timeline_home_bg_color</item>
        <item name="android:scrollingCache">true</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:longClickable">false</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:divider">@drawable/list_divider_line</item>
        <item name="android:dividerHeight">1.5dp</item>
    </style>   

    <style name="ExpandableListView">
        <item name="android:background">@color/timeline_home_bg_color</item>
        <item name="android:scrollingCache">true</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:longClickable">false</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:divider">@null</item>
        <item name="android:childDivider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <!-- 去掉activity标题阴影 -->
    <style name="Theme.NoDrop" parent="@android:style/Theme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NavigateView.Cell" parent="android:style/Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <!-- ActivityGroup 导航条 <item name="android:background">@drawable/btn_navigate_bar_bg</item> -->
    <style name="NavigateView.Btn" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/btn_navigate_bar_bg</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@drawable/text_navigate_bar_color</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:paddingTop">5dp</item>
    </style>    
    
    <!-- channel bar style -->
    <style name="ChannelBar.Text" parent="android:style/Widget.TextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@drawable/text_channel_bar_color</item>
        <item name="android:background">@drawable/channelbar_selected</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:gravity">top|center_horizontal</item>
        <!--
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        -->
    </style>

